<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".PredictDisease">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_select_at_least_four_symptoms"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/symptomSpinner1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/symptomSpinner2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner1"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/symptomSpinner3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner2"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/symptomSpinner4"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="You may select additional symptoms:"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner4" />

        <Spinner
            android:id="@+id/symptomSpinner5"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Spinner
            android:id="@+id/symptomSpinner6"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner5" />

        <Spinner
            android:id="@+id/symptomSpinner7"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner6" />

        <Spinner
            android:id="@+id/symptomSpinner8"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner7" />

        <Spinner
            android:id="@+id/symptomSpinner9"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner8" />

        <Spinner
            android:id="@+id/symptomSpinner10"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner9" />

        <Spinner
            android:id="@+id/symptomSpinner11"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner10" />

        <Spinner
            android:id="@+id/symptomSpinner12"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner11" />

        <Spinner
            android:id="@+id/symptomSpinner13"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner12" />

        <Spinner
            android:id="@+id/symptomSpinner14"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner13" />

        <Spinner
            android:id="@+id/symptomSpinner15"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner14" />

        <Spinner
            android:id="@+id/symptomSpinner16"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner15" />

        <Spinner
            android:id="@+id/symptomSpinner17"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner16" />

        <Button
            android:id="@+id/predictDiseaseBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Predict Disease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomSpinner17" />

        <TextView
            android:id="@+id/diseaseRes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:hint="Result of disease prediction appears here"
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/predictDiseaseBtn" />

        <Button
            android:id="@+id/viewInfoBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="View Disease Information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diseaseRes" />

        <Button
            android:id="@+id/saveResultBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Save Prediction Result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewInfoBtn" />

        <Button
            android:id="@+id/returnPred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Return"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saveResultBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
